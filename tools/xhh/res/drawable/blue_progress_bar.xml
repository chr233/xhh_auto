<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="@color/window_bg_color" android:endColor="@color/window_bg_color" android:angle="0.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="@color/blue_start" android:endColor="@color/blue_end" android:angle="0.0" />
            </shape>
        </clip>
    </item>
</layer-list>